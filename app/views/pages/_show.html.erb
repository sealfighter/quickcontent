
<% content_for :title do %>
	<%= @page.title %>
<% end %>

<% content_for :breadcrumb do %>
	<%= render "crumbs" %>
<% end %>

<h1><%= @page.title %></h1>

<p><%= @page.summary %></p>

<%= simple_format(@page.body) %>

<p><%= link_to 'Edit', edit_page_path(@page) %></p>

<h3>Children</h3>

<%= render @page.pages %>

<p><%= link_to 'New Child Page', new_page_path(:parent_id => @page.id) %></p>