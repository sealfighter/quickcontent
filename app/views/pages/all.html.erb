<% content_for :title do %>
  Listing Pages
<% end %>

<h1>Listing Pages</h1>
 
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
  </tr>
 
  <% @pages.each do |page| %>
    <tr>
      <td><%= page.title %></td>
      <td><%= page.summary %></td>
      <td><%= link_to 'Show', page_path(page) %></td>
      <td><%= link_to 'Edit', edit_page_path(page) %></td>
      <td><%= link_to 'Delete', page_path(page),
                    method: :delete, data: { confirm: 'Are you sure?' } %></td>

    </tr>
  <% end %>
</table>